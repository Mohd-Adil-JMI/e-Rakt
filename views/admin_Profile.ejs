<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- bootstrap Stylesheet v5.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

  <link rel="stylesheet" href="/css/admin_Profile.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <title>Admin</title>
</head>

<body>
  <nav class="navbar">
    <div class="header">
      <img src="/img/logo.png" alt="logo">
      <div class="toggle">
        < </div>
      </div>
      <div class="nav-items">
        <button class="item"><i class="fa-solid fa-chart-line"></i><span class="text">Dashboard</span></button>
        <button class="item"><i class="fa-solid fa-building-columns"></i></i><span class="text">Blood
            Banks</span></button>
        <button class="item"><i class="fa-solid fa-hospital-user"></i><span class="text">Customers</span></button>
        <button class="item"><i class="fa-solid fa-hand-holding-medical"></i><span class="text">Donation History</span></button>
        <button class="item"><i class="fa-solid fa-toolbox"></i><span class="text">Admins</span></button>
        <button class="item" onclick="location.href='/'"><i class="fa-solid fa-right-from-bracket"></i><span
            class="text">Logout</span></button>
      </div>
  </nav>
  <main class="container">
    <div class="content dashboard active">
      <h1>Admin Dashboard</h1>
    </div>

    <div class="content banks">
      <h1>Blood Banks</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Bank ID</th>
            <th scope="col">Bank Name</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Contact No</th>
            <th scope="col">Website</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<banks.length; i++){ %>
            <tr>
              <td><%= banks[i][0] %></td>
              <td><%= banks[i][4] %></td>
              <td><%= banks[i][5] %></td>
              <td><%= banks[i][2] %></td>
              <td><%= banks[i][1] %></td>
              <td><%= banks[i][7] %></td>
              <td><%= banks[i][11] %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="content customers">
      <h1>Customers</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Customer ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone No</th>
            <th scope="col">Date Of birth</th>
            <th scope="col">Aadhar No</th>
            <th scope="col">Address</th>
            <th scope="col">Blood Group</th>
            <th scope="col">Gender</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<customer.length; i++){ %>
            <tr>
              <td><%= customer[i].user_id %></td>
              <td><%= customer[i].First_Name %> <%= customer[i].Last_Name %></td>
              <td><%= customer[i].email %></td>
              <td><%= customer[i].PhoneNo %></td>
              <td><%= customer[i].DOB %></td>
              <td><%= customer[i].AadharNo %></td>
              <td><%= customer[i].Address %></td>
              <td><%= customer[i].BloodGrp %></td>
              <td><%= customer[i].Gender %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="content donors">
      <h1>Donation History</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">LogID</th>
            <th scope="col">Customer ID</th>
            <th scope="col">Transaction Type</th>
            <th scope="col">Transaction Date</th>
            <th scope="col">Bank ID</th>
            <th scope="col">Blood Group</th>
            <th scope="col">Units Purchased</th>
            <th scope="col">Bill</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<logs.length; i++){ %>
            <tr>
              <td><%= logs[i].LogID %></td>
              <td><%= logs[i].CustomerID %></td>
              <td><%= logs[i].Transaction_type %></td>
              <td><%= logs[i].TransactionDate %></td>
              <td><%= logs[i].BankID %></td>
              <td><%= logs[i].BloodGrp %></td>
              <td><%= logs[i].units %></td>
              <td><%= logs[i].Bill %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="content admins">
      <h1>Admins</h1>
    </div>

  </main>
  <!-- Bootstrap Script -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
    integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
    integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
    crossorigin="anonymous"></script>
  <script src="/js/admin_Profile.js"></script>
</body>

</html>