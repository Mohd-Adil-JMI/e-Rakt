      </div>
    </div>

    <div class="content banks">
      <h3 class="dashboard-heading">Banks</h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Bank ID</th>
            <th scope="col">Bank Name</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Contact No</th>
            <th scope="col">Website</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<banks.length; i++){ %>
            <tr>
              <td>
                <%= banks[i][0] %>
              </td>
              <td>
                <%= banks[i][4] %>
              </td>
              <td>
                <%= banks[i][5] %>
              </td>
              <td>
                <%= banks[i][2] %>
              </td>
              <td>
                <%= banks[i][1] %>
              </td>
              <td>
                <%= banks[i][7] %>
              </td>
              <td>
                <%= banks[i][11] %>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>

    <div class="content customers">
      <h3 class="dashboard-heading">Customers</h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Customer ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone No</th>
            <th scope="col">Date Of birth</th>
            <th scope="col">Aadhar No</th>
            <th scope="col">Address</th>
            <th scope="col">Blood Group</th>
            <th scope="col">Gender</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<customer.length; i++){ %>
            <tr>
              <td>
                <%= customer[i].user_id %>
              </td>
              <td>
                <%= customer[i].First_Name %>
                  <%= customer[i].Last_Name %>
              </td>
              <td>
                <%= customer[i].email %>
              </td>
              <td>
                <%= customer[i].PhoneNo %>
              </td>
              <td>
                <%= customer[i].DOB %>
              </td>
              <td>
                <%= customer[i].AadharNo %>
              </td>
              <td>
                <%= customer[i].Address %>
              </td>
              <td>
                <%= customer[i].BloodGrp %>
              </td>
              <td>
                <%= customer[i].Gender %>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>

    <div class="content donors">
      <h3 class="dashboard-heading">Purchase - Donation History</h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">LogID</th>
            <th scope="col">Customer ID</th>
            <th scope="col">Transaction Type</th>
            <th scope="col">Transaction Date</th>
            <th scope="col">Bank ID</th>
            <th scope="col">Blood Group</th>
            <th scope="col">Units Purchased</th>
            <th scope="col">Bill</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i<logs.length; i++){ %>
            <tr>
              <td>
                <%= logs[i].LogID %>
              </td>
              <td>
                <%= logs[i].CustomerID %>
              </td>
              <td>
                <%= logs[i].Transaction_type %>
              </td>
              <td>
                <%= logs[i].TransactionDate %>
              </td>
              <td>
                <%= logs[i].BankID %>
              </td>
              <td>
                <%= logs[i].BloodGrp %>
              </td>
              <td>
                <%= logs[i].units %>
              </td>
              <td>
                <%= logs[i].Bill %>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>

